# Make an alias for invoking commands you use constantly
# alias p='python'
alias ls='eza -lh --group-directories-first --icons=auto'
alias ll='ls -al'
alias more='less -F -X'
alias vi='nvim'
alias src="source ~/.zshrc"
alias s="src"
alias stow='stow -t ~'
alias ms='mega-sync'
alias mt='mega-transfers --show-syncs'
alias wh="which"
alias y='run-yazi.sh'

# chrome w/out HTTPS cert warning
alias chromeno='/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome --allow-insecure-localhost --ignore-certificate-errors'

