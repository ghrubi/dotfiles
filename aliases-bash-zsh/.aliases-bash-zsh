# pipenv everything
alias pe='pipenv'
alias pei='pipenv install'
alias peid='pipenv install --dev'
# pipenv install Pipfile.lock, instead of Pipfile
alias peil='pipenv install --ignore-pipfile'
alias peu='pipenv uninstall'
alias pes='pipenv shell'
alias per='pipenv run'
alias perp='pipenv run python'
alias peg='pipenv graph'
alias perm='pipenv --rm'
alias pec='pipenv check'
alias pel='pipenv lock'
alias pele='pipenv lock --pre'
alias pev='pipenv --venv'
alias pee='pipenv --envs'
alias pew='pipenv --where'

